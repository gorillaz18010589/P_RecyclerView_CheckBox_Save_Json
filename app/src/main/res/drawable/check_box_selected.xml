<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--陰影部分-->
    <!--設置陰影左邊跟上面的offset-->
    <!--  代表圖片往上跟左移動,右下就會多3dp 的陰影  -->
    <item
        android:top="3dp">
        <shape
            android:shape="rectangle">
            <!--設定陰影顏色-->
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorAccent"
                android:angle="90"/>
            -->
            <!--設定圓角的尺寸-->
            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"/>
        </shape>
    </item>
    <!--物件部分-->
    <!--設置物件右邊跟下面的offset-->
    <!-- 設置陰影處在右邊跟下面   -->
    <item
        android:bottom="3dp">
        <shape
            android:shape="rectangle">
            <!--設定形狀的顏色-->
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorAccent"
                android:angle="90"/>
            -->
            <!--設定圓角的尺寸-->
            <corners
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                />
            <!--設定邊框-->
            <stroke
                android:width="0.4dp"
                android:color="@color/colorAccent"/>
            <!--設定內容與邊界的距離-->
            <padding
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp"
                android:left="15dp"/>
        </shape>
    </item>
</layer-list>